<link rel="stylesheet" href="../style/table.css" />
<div align="center" style="margin-top: 120px; margin-bottom:120px;">
    <h1>Please Review Before Paying</h1>
    <form action="/Products/checkBill" method="post">
    <table>
        <tr>
           
            <td>
                <input type="hidden" name="paymentId" value="{{paymentId}}" />
                <input type="hidden"  name="PayerID" value="{{payerId}}" />
            </td>
        </tr>
        <tr><td><br/></td></tr>
        <tr>
            <td colspan="2"><b>Payer Information:</b></td>
        </tr>
        <tr>
            <td>First Name:</td>
            <td>{{fname}}</td>
        </tr>
        <tr>
            <td>Last Name:</td>
            <td>{{lname}}</td>
        </tr>
        <tr>
            <td>Email:</td>
            <td>{{email}}</td>
        </tr>
        <tr><td><br/></td></tr>
        <tr>
            <td colspan="2"><b>Payee Information:</b></td>
        </tr>
        <tr>
            <td>Email:</td>
            <td>{{seller}}</td>
        </tr>
        <tr><td><br/></td></tr>
        <tr>
            <td colspan="2"><b>Shipping Address:</b></td>
        </tr>
        <tr>
            <td>Recipient Name:</td>
            <td>{{name}}</td>
        </tr>
        <tr>
            <td>Line 1:</td>
            <td>{{line1}}</td>
        </tr>
        <tr>
            <td>City:</td>
            <td>{{city}}</td>
        </tr>
        <tr>
            <td>State:</td>
            <td>{{state}}</td>
        </tr>
        <tr>
            <td>Country Code:</td>
            <td>{{country}}</td>
        </tr>
        <tr>
            <td>Postal Code:</td>
            <td>{{code}}</td>
        </tr>
        <br>
        <tr>
            <td colspan="2" align="center">
                <input type="submit" style="width: 60%; height:30px; margin-top:20px;" class="btnn" value="Pay Now" />
            </td>
        </tr>    
    </table>
    </form>
</div>